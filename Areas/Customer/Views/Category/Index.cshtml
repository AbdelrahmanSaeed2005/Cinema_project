@model List<Category>

<div class="container mt-4">
    <div class="row">
        @foreach (var category in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card bg-dark text-light shadow-sm border-0 rounded-4 h-100">
                    <div class="card-body d-flex flex-column justify-content-between">
                        <h5 class="card-title text-danger fw-bold">@category.Name</h5>
                        <div class="mt-3 text-end">
                            <a href="/Customer/AllMoviesHome/Index/@category.Id" class="btn btn-sm btn-outline-warning">
                                🎞️ All Movies
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

</div>
<style>
    /* كروت التصنيفات */
.card {
    background-color: #1c1c1c;
    color: #e0e0e0;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}
.card:hover {
    transform: scale(1.02);
    box-shadow: 0 0 12px rgba(255, 100, 100, 0.3);
}
.card-title {
    color: #ff5252;
}

/* زر الأفلام */
.btn-outline-warning {
    color: #ffc107;
