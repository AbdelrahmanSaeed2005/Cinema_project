@model List<Cinema>

<div class="container mt-4">
    <div class="row">
        @foreach (var cinema in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm bg-dark text-light border-0 rounded-4 h-100">
                    <div class="card-body d-flex flex-column justify-content-between">
                        <h5 class="card-title text-danger fw-bold">@cinema.Name</h5>
                        <div class="mt-3 text-end">
                            <a href="/Customer/CinemaDetails/Index/@cinema.Id" class="btn btn-outline-info btn-sm">
                                🎬 See Details
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

</div>

