@model CinemaHub.Models.Category

<div class="container mt-5 p-4 rounded-4 shadow" style="background-color: #1e1e1e; color: #e0e0e0; max-width: 600px;">
    <h2 class="mb-4 fw-bold text-center text-success">➕ Add New Category</h2>

    <form asp-action="Create" method="post">
        <div class="mb-3">
            <label asp-for="Name" class="form-label">Category Name</label>
            <input asp-for="Name" class="form-control bg-dark text-light border-secondary shadow-sm" placeholder="Enter category name..." />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-success px-4">✔️ Add</button>
            <a href="/Admin/Category" class="btn btn-outline-light">↩️ Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    body {
        background-color: #121212;
    }

    input:focus {
        box-shadow: 0 0 5px #28a745;
        border-color: #28a745;
    }

    .btn-success {
        background-color: #28a745;
        border: none;
    }

        .btn-success:hover {
            background-color: #218838;
        }

    .btn-outline-light:hover {
        background-color: #f8f9fa;
        color: #000;
    }
</style>
