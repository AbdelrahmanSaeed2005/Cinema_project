@model CinemaHub.Models.Cinema
<div class="container">
<div class="container mt-5 p-4 rounded-4 shadow-lg" style="background-color: #1e1e1e;">
    <h2 class="mb-4 text-warning fw-bold">✏️ Edit Cinema</h2>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="Name" class="form-label text-light fw-semibold"></label>
            <input asp-for="Name" class="form-control bg-dark text-light border-secondary" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label text-light fw-semibold"></label>
            <textarea asp-for="Description" rows="4" class="form-control bg-dark text-light border-secondary"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-start mt-4">
            <button type="submit" class="btn btn-warning me-2 px-4 fw-bold">Update</button>
            <a href="/Admin/Cinema" class="btn btn-secondary px-4">Cancel</a>
        </div>
    </form>
</div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    body {
        background-color: #121212;
        color: #e0e0e0;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .form-control:focus {
        box-shadow: 0 0 0 0.2rem rgba(255, 193, 7, 0.25);
        border-color: #ffc107;
        background-color: #2a2a2a;
    }

    .btn-warning:hover {
        background-color: #e0a800;
        border-color: #d39e00;
        color: #000;
    }

    .btn-secondary:hover {
        background-color: #6c757d;
        border-color: #5a6268;
    }
</style>
